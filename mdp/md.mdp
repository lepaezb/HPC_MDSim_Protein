; md.mdp - Production Simulation
; ------------------------------------------------
; define    = (No restraints)

; Run Control
integrator  = md
nsteps      = 500000000      ; 1 microsecond (1000 ns)
dt          = 0.002          ; 2 fs

; Output Control
nstxout     = 0
nstvout     = 0
nstenergy   = 5000           ; Save energy every 10 ps
nstlog      = 5000           ; Log every 10 ps
nstxout-compressed = 5000    ; Save trajectory every 10 ps
compressed-x-grps  = System

; Center of Mass (COMM) Removal
comm-mode   = Linear
nstcomm     = 100

; Bond Constraints
continuation         = yes      ; Continue from NPT
constraint_algorithm = lincs
constraints          = h-bonds
lincs_iter           = 1
lincs_order          = 4

; Neighbor Searching
cutoff-scheme = Verlet
nstlist       = 20
rlist         = 1.2
pbc           = xyz

; Electrostatics
coulombtype     = PME
rcoulomb        = 1.2
pme_order       = 4
fourierspacing  = 0.12

; Van der Waals (CHARMM36 Compliant)
vdwtype         = cutoff
vdw-modifier    = force-switch
rvdw-switch     = 1.0
rvdw            = 1.2
DispCorr        = no

; Temperature Coupling
tcoupl      = V-rescale
tc-grps     = Protein Non-Protein
tau_t       = 0.5     0.5
ref_t       = 310     310

; Pressure Coupling
pcoupl           = Parrinello-Rahman  ; Extended ensemble barostat for production
pcoupltype       = isotropic
tau_p            = 5.0                ; Oscillation period (ps)
ref_p            = 1.0
compressibility  = 4.5e-5

; Velocity Generation
gen_vel     = no